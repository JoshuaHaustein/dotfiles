# Colors
set $seperator_color #7780a1
set $highlighted_border #000000
set $highlighted_background #262522
set $highlighted_text #9c9277
set $unfocused_background #000000
set $unfocused_text #4a4538
set $unfocused_seperators #4a4538
set $alert_background #6b010c
set $alert_border #6b010c
set $alert_text #000000
set $alert_seperators #000000
# Widow Colours
#                       border                  background                  text                indicator
client.focused          $highlighted_border     $highlighted_background     $highlighted_text   $seperator_color
client.focused_inactive $highlighted_border     $highlighted_background     $highlighted_text   $seperator_color
client.unfocused        $unfocused_background   $unfocused_background       $unfocused_text     $unfocused_seperators
client.urgent           $alert_border           $alert_background           $alert_text         $alert_seperators

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        i3bar_command i3bar --transparency
        status_command i3status
    	font pango:$FONT, FontAwesome $FONTSIZE
    	#status_command i3blocks
    	position top
    	# strip_workspace_numbers yes
    	#height 25
    	#bindsym button4 nop
    	#bindsym button5 nop
    	colors {
      		separator $unfocused_seperators
      		background $unfocused_background
      		statusline $highlighted_text
		#                        border  background text
      		focused_workspace  $unfocused_background $highlighted_background    $highlighted_text
      		active_workspace   $unfocused_background $highlighted_background    $highlighted_text
      		inactive_workspace $unfocused_background $unfocused_background    $unfocused_text
     		urgent_workspace   $unfocused_background $unfocused_background    $alert_text
    	}
}

# Commands to run on startup
